<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/huellas2"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">







            <TextView
                android:id="@+id/btnNuevoPaseo"
                android:layout_width="299dp"
                android:gravity="center"
                android:layout_height="90dp"
                android:background="@drawable/borde_menu"
                android:onClick="ctrlBoton"
                android:text="@string/nav_pas_pedirpaseo"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginTop="30dp"

                />


            <TextView
                android:id="@+id/btnNuevoHospedaje"
                android:layout_width="299dp"
                android:gravity="center"
                android:layout_height="90dp"
                android:background="@drawable/borde_menu"
                android:onClick="ctrlBoton"
                android:text="@string/nuevo_hospedaje"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                />




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>