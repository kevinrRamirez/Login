<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/huellas2"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/btnNuevoPaseo"
                android:layout_width="299dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/borde_menu"
                android:gravity="center"
                android:onClick="ctrlBoton"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/nav_pas_pedirpaseo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/circulo"
                    android:layout_marginStart="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="@string/mayor_que"
                        android:textColor="@color/colorPrimary"
                        android:textSize="65sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/btnMenu3"
                android:layout_width="299dp"
                android:gravity="center"
                android:layout_height="90dp"
                android:background="@drawable/edit_text"
                android:onClick="ctrlBoton"
                android:text="@string/nav_pas_pedirpaseo"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/btnMenu4"
                android:layout_width="299dp"
                android:gravity="center"
                android:layout_height="90dp"
                android:background="@drawable/borde_menu"
                android:onClick="ctrlBoton"
                android:text="@string/nav_pas_pedirpaseo"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginTop="30dp"

                />

            <LinearLayout
                android:id="@+id/btnMenu2"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:onClick="ctrlBoton"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_pas_pedirpaseo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/ic_perfil" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>